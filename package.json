{
  "name": "provider-data-validator",
  "version": "1.0.0",
  "description": "EY Techathon 6.0 - Provider Data Validation System",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
