import React, {useState, useRef} from 'react';
import {Upload, CheckCircle, AlertCircle, AlertTriangle, FileText, Info, X, Loader2, Plus} from 'lucide-react';
import {Card} from './ui/card';
import {Button} from './ui/button';
import {Badge} from './ui/badge';
import api from '../utils/api';

interface ValidationError {
    row: number;
    field: string;
    message: string;
    current: string;
    suggested: string;
    severity: 'error' | 'warning';
}

interface ValidationResult {
    success: boolean;
    data: {
        totalRecords: number;
        validRecords: number;
        invalidRecords: number;
        warningRecords: number;
        errors: ValidationError[];
        warnings: ValidationError[];
        allRecords: any[];
    };
}

interface ProviderRecord {
    row: number;
    npi: string;
    name: string;
    email: string;
    phone: string;
    specialty: string;
    license_state: string;
    quality_score: string;
    isValid: boolean;
    errors?: ValidationError[];
    warnings?: ValidationError[];
}

export function FileValidation() {
    const [fileUploaded, setFileUploaded] = useState(false);
    const [selectedFile, setSelectedFile] = useState<File | null>(null);
    const [isDragging, setIsDragging] = useState(false);
    const [isUploading, setIsUploading] = useState(false);
    const [validationResult, setValidationResult] = useState<ValidationResult | null>(null);
    const [showDetailsModal, setShowDetailsModal] = useState(false);
    const [selectedCategory, setSelectedCategory] = useState<'total' | 'valid' | 'invalid' | 'warnings'>('total');
    const fileInputRef = useRef<HTMLInputElement>(null);

    const handleFileSelect = (event: React.ChangeEvent<HTMLInputElement>) => {
        const file = event.target.files?.[0];
        if (file) {
            handleFile(file);
        }
    };

    const handleFile = async (file: File) => {
        const validTypes = ['text/csv', 'application/vnd.ms-excel', 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'];
        if (!validTypes.includes(file.type) && !file.name.endsWith('.csv') && !file.name.endsWith('.xlsx')) {
            alert('Please upload a CSV or XLSX file');
            return;
        }

        const maxSize = 10 * 1024 * 1024;
        if (file.size > maxSize) {
            alert('File size must be less than 10MB');
            return;
        }

        setSelectedFile(file);
        setIsUploading(true);

        try {
            const formData = new FormData();
            formData.append('file', file);

            const response = await api.post<ValidationResult>('/validation/upload', formData, {
                headers: {
                    'Content-Type': 'multipart/form-data',
                },
            });

            if (response.data.success) {
                setValidationResult(response.data);
                setFileUploaded(true);
            }
        } catch (error: any) {
            console.error('Upload error:', error);
            alert(error.response?.data?.message || 'Failed to upload file. Please try again.');
        } finally {
            setIsUploading(false);
        }
    };

    const handleButtonClick = () => {
        fileInputRef.current?.click();
    };

    const handleDragOver = (e: React.DragEvent) => {
        e.preventDefault();
        setIsDragging(true);
    };

    const handleDragLeave = (e: React.DragEvent) => {
        e.preventDefault();
        setIsDragging(false);
    };

    const handleDrop = (e: React.DragEvent) => {
        e.preventDefault();
        setIsDragging(false);
        const file = e.dataTransfer.files[0];
        if (file) {
            handleFile(file);
        }
    };

    const handleReset = () => {
        setFileUploaded(false);
        setSelectedFile(null);
        setValidationResult(null);
        if (fileInputRef.current) {
            fileInputRef.current.value = '';
        }
    };

    const handleCardClick = (category: 'total' | 'valid' | 'invalid' | 'warnings') => {
        setSelectedCategory(category);
        setShowDetailsModal(true);
    };

    const getFilteredRecords = (): ProviderRecord[] => {
        if (!validationResult?.data?.allRecords) return [];

        const records = validationResult.data.allRecords;

        switch (selectedCategory) {
            case 'valid':
                return records.filter((r: ProviderRecord) => r.isValid && (!r.warnings || r.warnings.length === 0));
            case 'invalid':
                return records.filter((r: ProviderRecord) => !r.isValid);
            case 'warnings':
                return records.filter((r: ProviderRecord) => r.warnings && r.warnings.length > 0);
            case 'total':
            default:
                return records;
        }
    };

    const handleAddProvider = async (record: ProviderRecord) => {
        try {
            await api.post('/providers', {
                npi: record.npi,
                name: record.name,
                email: record.email,
                phone: record.phone,
                specialty: record.specialty,
                licenseState: record.license_state,
                qualityScore: parseFloat(record.quality_score),
            });
            alert(`Provider ${record.name} added successfully!`);
        } catch (error: any) {
            console.error('Error adding provider:', error);
            alert(error.response?.data?.message || 'Failed to add provider');
        }
    };

    const stats = validationResult?.data ? [
        {
            label: 'Total Records',
            value: validationResult.data.totalRecords,
            color: '#1976D2',
            bgColor: '#E3F2FD',
            category: 'total' as const
        },
        {
            label: 'Valid',
            value: validationResult.data.validRecords,
            color: '#43A047',
            bgColor: '#E8F5E9',
            category: 'valid' as const
        },
        {
            label: 'Invalid',
            value: validationResult.data.invalidRecords,
            color: '#E53935',
            bgColor: '#FFEBEE',
            category: 'invalid' as const
        },
        {
            label: 'Warnings',
            value: validationResult.data.warningRecords,
            color: '#FB8C00',
            bgColor: '#FFF3E0',
            category: 'warnings' as const
        }
    ] : [];

    return (
        <div>
            {/* Header */}
            <div className="mb-8">
                <h1 className="text-3xl font-bold mb-2">Data Validation</h1>
                <p className="text-base text-[#757575]">Upload and validate provider data files</p>
            </div>

            {/* Upload Section */}
            {!fileUploaded ? (
                <Card className="mb-6 bg-white p-6">
                    <div
                        className={`flex flex-col items-center justify-center py-16 px-4 border-2 border-dashed rounded-lg transition-all ${
                            isDragging ? 'border-[#1976D2] bg-[#E3F2FD]' : 'border-[#E0E0E0] bg-white'
                        }`}
                        onDragOver={handleDragOver}
                        onDragLeave={handleDragLeave}
                        onDrop={handleDrop}
                    >
                        <div className="w-16 h-16 bg-[#E3F2FD] rounded-full flex items-center justify-center mb-4">
                            {isUploading ? (
                                <Loader2 size={32} className="text-[#1976D2] animate-spin"/>
                            ) : (
                                <Upload size={32} className="text-[#1976D2]"/>
                            )}
                        </div>
                        <h3 className="mb-2">{isUploading ? 'Uploading...' : 'Drop file or click to browse'}</h3>
                        <p className="text-[#757575] mb-6">Supports CSV, XLSX (Max 10MB)</p>

                        <input
                            ref={fileInputRef}
                            type="file"
                            accept=".csv,.xlsx,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
                            onChange={handleFileSelect}
                            className="hidden"
                        />

                        <Button onClick={handleButtonClick} disabled={isUploading}>
                            {isUploading ? 'Uploading...' : 'Select File'}
                        </Button>
                    </div>
                </Card>
            ) : (
                <>
                    {/* File Info */}
                    <Card className="mb-6 bg-white p-6">
                        <div className="flex items-center justify-between">
                            <div className="flex items-center gap-4">
                                <div className="w-12 h-12 bg-[#E3F2FD] rounded-lg flex items-center justify-center">
                                    <FileText size={24} className="text-[#1976D2]"/>
                                </div>
                                <div>
                                    <h4 className="font-semibold text-[#212121]">{selectedFile?.name}</h4>
                                    <p className="text-sm text-[#757575]">
                                        {selectedFile ? `${(selectedFile.size / 1024).toFixed(2)} KB` : ''}
                                    </p>
                                </div>
                            </div>
                            <Button variant="secondary" onClick={handleReset}>
                                <X size={20}/>
                                Remove
                            </Button>
                        </div>
                    </Card>

                    {/* Validation Summary - Clickable Cards */}
                    <div className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                        {stats.map((stat) => (
                            <Card
                                key={stat.label}
                                className="bg-white p-6 cursor-pointer hover:shadow-lg transition-shadow"
                                onClick={() => handleCardClick(stat.category)}
                            >
                                <div className="flex items-center gap-4">
                                    <div
                                        className="w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0"
                                        style={{backgroundColor: stat.bgColor, color: stat.color}}
                                    >
                                        <span className="text-xl">{stat.value}</span>
                                    </div>
                                    <div>
                                        <p className="text-sm text-[#757575]">{stat.label}</p>
                                        <p className="text-xs text-[#1976D2] mt-1">Click to view</p>
                                    </div>
                                </div>
                            </Card>
                        ))}
                    </div>

                    {/* Success Message */}
                    {validationResult && validationResult.data.validRecords > 0 && (
                        <Card className="mb-6 bg-[#E8F5E9] border border-[#43A047] p-6">
                            <div className="flex items-start gap-3">
                                <CheckCircle size={24} className="text-[#43A047] flex-shrink-0 mt-0.5"/>
                                <div>
                                    <h4 className="text-[#43A047] mb-1">Validation Successful</h4>
                                    <p className="text-[#43A047]">
                                        {validationResult.data.validRecords} records validated successfully
                                    </p>
                                </div>
                            </div>
                        </Card>
                    )}

                    {/* Error List */}
                    {validationResult && validationResult.data.errors.length > 0 && (
                        <Card className="mb-6 bg-white p-6">
                            <h3 className="text-xl font-semibold mb-4">
                                Validation Errors ({validationResult.data.errors.length})
                            </h3>
                            <div className="space-y-4">
                                {validationResult.data.errors.slice(0, 10).map((error, index) => (
                                    <div
                                        key={index}
                                        className="p-4 rounded-lg border border-[#E53935] bg-[#FFEBEE]"
                                    >
                                        <div className="flex items-start justify-between mb-2">
                                            <div className="flex items-center gap-2">
                                                <AlertCircle size={20} className="text-[#E53935]"/>
                                                <span className="text-sm">
                                                    Row {error.row} - {error.field}
                                                </span>
                                            </div>
                                            <Badge variant="error">ERROR</Badge>
                                        </div>
                                        <p className="text-sm mb-3 text-[#E53935]">{error.message}</p>
                                        <div className="grid grid-cols-2 gap-4">
                                            <div>
                                                <p className="text-xs text-[#757575] mb-1">Current Value:</p>
                                                <code
                                                    className="text-sm bg-white px-2 py-1 rounded border border-[#E0E0E0]">
                                                    {error.current}
                                                </code>
                                            </div>
                                            <div>
                                                <p className="text-xs text-[#757575] mb-1">Suggested Value:</p>
                                                <code
                                                    className="text-sm bg-white px-2 py-1 rounded border border-[#43A047] text-[#43A047]">
                                                    {error.suggested}
                                                </code>
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </Card>
                    )}

                    {/* File Format Guidelines */}
                    <Card className="bg-[#E3F2FD] border border-[#1976D2] p-6">
                        <div className="flex items-start gap-3">
                            <Info size={24} className="text-[#1976D2] flex-shrink-0 mt-0.5"/>
                            <div>
                                <h4 className="text-[#1976D2] mb-3">File Format Guidelines</h4>
                                <ul className="space-y-2 text-[#1976D2]">
                                    <li className="flex items-start gap-2">
                                        <span className="text-[#1976D2] mt-1">•</span>
                                        <span>NPI must be exactly 10 digits</span>
                                    </li>
                                    <li className="flex items-start gap-2">
                                        <span className="text-[#1976D2] mt-1">•</span>
                                        <span>Email must be in valid format (user@domain.com)</span>
                                    </li>
                                    <li className="flex items-start gap-2">
                                        <span className="text-[#1976D2] mt-1">•</span>
                                        <span>Phone format: (XXX) XXX-XXXX</span>
                                    </li>
                                    <li className="flex items-start gap-2">
                                        <span className="text-[#1976D2] mt-1">•</span>
                                        <span>State codes must be 2-letter abbreviations</span>
                                    </li>
                                    <li className="flex items-start gap-2">
                                        <span className="text-[#1976D2] mt-1">•</span>
                                        <span>Specialty must match approved specialty list</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </Card>
                </>
            )}

            {/* Records Detail Modal */}
            {showDetailsModal && (
                <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4 overflow-y-auto">
                    <div className="bg-white rounded-lg shadow-xl max-w-6xl w-full my-8 flex flex-col"
                         style={{maxHeight: 'calc(100vh - 4rem)'}}>
                        {/* Modal Header */}
                        <div
                            className="bg-[#1976D2] text-white p-6 rounded-t-lg flex items-center justify-between flex-shrink-0">
                            <div>
                                <h3 className="text-2xl font-bold">{selectedCategory.toUpperCase()} Records</h3>
                                <p className="text-sm opacity-90 mt-1">
                                    {getFilteredRecords().length} provider{getFilteredRecords().length !== 1 ? 's' : ''} found
                                </p>
                            </div>
                            <button
                                onClick={() => setShowDetailsModal(false)}
                                className="text-white hover:bg-white hover:bg-opacity-20 p-2 rounded-full transition-colors"
                            >
                                <X size={24}/>
                            </button>
                        </div>

                        {/* Modal Body - Scrollable */}
                        <div className="overflow-y-auto flex-1 min-h-0" style={{maxHeight: 'calc(100vh - 16rem)'}}>
                            <div className="p-6">
                                <div className="grid grid-cols-1 gap-4">
                                {getFilteredRecords().map((record, index) => (
                                    <Card key={index}
                                          className="bg-white p-4 border-2 hover:shadow-md transition-shadow">
                                        <div className="flex items-start justify-between">
                                            <div className="flex-1">
                                                <div className="flex items-center gap-3 mb-3">
                                                    <h4 className="text-lg font-semibold text-[#212121]">
                                                        {record.name}
                                                    </h4>
                                                    <Badge
                                                        variant={
                                                            record.isValid
                                                                ? record.warnings && record.warnings.length > 0
                                                                    ? 'warning'
                                                                    : 'success'
                                                                : 'error'
                                                        }
                                                    >
                                                        {record.isValid
                                                            ? record.warnings && record.warnings.length > 0
                                                                ? 'WARNING'
                                                                : 'VALID'
                                                            : 'INVALID'}
                                                    </Badge>
                                                    <span className="text-xs text-[#757575]">Row {record.row}</span>
                                                </div>

                                                <div className="grid grid-cols-2 md:grid-cols-4 gap-3 mb-3">
                                                    <div>
                                                        <p className="text-xs text-[#757575]">NPI</p>
                                                        <p className="text-sm font-medium">{record.npi}</p>
                                                    </div>
                                                    <div>
                                                        <p className="text-xs text-[#757575]">Email</p>
                                                        <p className="text-sm font-medium">{record.email}</p>
                                                    </div>
                                                    <div>
                                                        <p className="text-xs text-[#757575]">Phone</p>
                                                        <p className="text-sm font-medium">{record.phone}</p>
                                                    </div>
                                                    <div>
                                                        <p className="text-xs text-[#757575]">Specialty</p>
                                                        <p className="text-sm font-medium">{record.specialty}</p>
                                                    </div>
                                                    <div>
                                                        <p className="text-xs text-[#757575]">State</p>
                                                        <p className="text-sm font-medium">{record.license_state}</p>
                                                    </div>
                                                    <div>
                                                        <p className="text-xs text-[#757575]">Quality Score</p>
                                                        <p className="text-sm font-medium">{record.quality_score}</p>
                                                    </div>
                                                </div>

                                                {/* Show errors/warnings if any */}
                                                {record.errors && record.errors.length > 0 && (
                                                    <div className="mt-2 p-3 bg-[#FFEBEE] rounded-lg">
                                                        <p className="text-xs font-semibold text-[#E53935] mb-1">Errors:</p>
                                                        <ul className="text-xs text-[#E53935] space-y-1">
                                                            {record.errors.map((err, i) => (
                                                                <li key={i}>• {err.field}: {err.message}</li>
                                                            ))}
                                                        </ul>
                                                    </div>
                                                )}

                                                {record.warnings && record.warnings.length > 0 && (
                                                    <div className="mt-2 p-3 bg-[#FFF3E0] rounded-lg">
                                                        <p className="text-xs font-semibold text-[#FB8C00] mb-1">Warnings:</p>
                                                        <ul className="text-xs text-[#FB8C00] space-y-1">
                                                            {record.warnings.map((warn, i) => (
                                                                <li key={i}>• {warn.field}: {warn.message}</li>
                                                            ))}
                                                        </ul>
                                                    </div>
                                                )}
                                            </div>

                                            {/* Add Provider Button - Only for valid records */}
                                            {record.isValid && (
                                                <Button
                                                    onClick={() => handleAddProvider(record)}
                                                    className="ml-4 flex-shrink-0"
                                                >
                                                    <Plus size={18}/>
                                                    Add to Providers
                                                </Button>
                                            )}
                                        </div>
                                    </Card>
                                ))}
                                </div>
                            </div>
                        </div>

                        {/* Modal Footer */}
                        <div className="p-4 border-t border-[#E0E0E0] bg-gray-50 rounded-b-lg flex-shrink-0">
                            <Button variant="secondary" onClick={() => setShowDetailsModal(false)} className="w-full">
                                Close
                            </Button>
                        </div>
                    </div>
                </div>
            )}
        </div>
    );
}
